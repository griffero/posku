<div class="sm:flex sm:items-center mb-8">
  <div class="sm:flex-auto">
    <h1 class="text-2xl font-bold text-gray-900">Viajes</h1>
    <p class="mt-2 text-sm text-gray-700">Lista de salidas programadas.</p>
  </div>
  <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
    <%= link_to "Nuevo Viaje", new_admin_trip_path, class: "block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500" %>
  </div>
</div>

<!-- Filters -->
<div class="bg-white shadow rounded-lg p-4 mb-6">
  <%= form_tag admin_trips_path, method: :get, class: "flex flex-wrap gap-4 items-end" do %>
    <div>
      <%= label_tag :date, "Fecha", class: "block text-sm font-medium text-gray-700" %>
      <%= date_field_tag :date, params[:date], class: "mt-1 block rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= label_tag :upcoming, class: "flex items-center" do %>
        <%= check_box_tag :upcoming, "1", params[:upcoming].present?, class: "h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" %>
        <span class="ml-2 text-sm text-gray-700">Solo próximos</span>
      <% end %>
    </div>
    <%= submit_tag "Filtrar", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
    <%= link_to "Limpiar", admin_trips_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
  <% end %>
</div>

<div class="bg-white shadow rounded-lg overflow-hidden">
  <table class="min-w-full divide-y divide-gray-300">
    <thead class="bg-gray-50">
      <tr>
        <th class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900">Ruta</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Salida</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Bus</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Disponibles</th>
        <th class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Estado</th>
        <th class="relative py-3.5 pl-3 pr-4"></th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 bg-white">
      <% @trips.each do |trip| %>
        <tr>
          <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm">
            <p class="font-medium text-gray-900"><%= trip.route.origin_terminal.city %> → <%= trip.route.destination_terminal.city %></p>
            <p class="text-gray-500"><%= trip.route.duration_formatted %></p>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
            <%= trip.departure_at.strftime("%d/%m/%Y %H:%M") %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
            <%= trip.bus.bus_type_label %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
            <%= trip.available_seats_count %>/<%= trip.bus.total_seats %>
          </td>
          <td class="whitespace-nowrap px-3 py-4 text-sm">
            <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium bg-green-100 text-green-800">
              <%= trip.status_label %>
            </span>
          </td>
          <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium space-x-2">
            <%= link_to "Ocupación", occupancy_admin_trip_path(trip), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= link_to "Editar", edit_admin_trip_path(trip), class: "text-indigo-600 hover:text-indigo-900" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
